{
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "package.json",
    "package-lock.json"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "ESNext",
    "isolatedModules": true,
    "outDir": "build",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true
  }
}
